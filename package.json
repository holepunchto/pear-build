{
  "name": "pear-build",
  "version": "0.1.0",
  "main": "index.js",
  "type": "commonjs",
  "description": "Build appling for a Pear application",
  "author": "Holepunch Inc",
  "license": "Apache-2.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "prettier --check .",
    "test:gen": "brittle -r test/all.js test/*.test.js",
    "test": "brittle-bare --coverage test/all.js"
  },
  "pear": {
    "name": "pear-build",
    "main": "cmd.js",
    "stage": {
      "ignore": [
        "**/node_modules",
        "!/node_modules"
      ]
    },
    "platform": {
      "command": {
        "summary": "Build appling for a Pear application",
        "description": "Specify link to build a project.",
        "arg <link>": "Pear link to build",
        "arg [dir]": "Output directory path (default: .)",
        "flag --json": "Newline delimited JSON output"
      }
    }
  },
  "dependencies": {
    "bare-build": "^0.4.1",
    "bare-fs": "^4.5.3",
    "bare-os": "^3.6.2",
    "bare-path": "^3.0.0",
    "bare-subprocess": "^5.2.2",
    "hypercore-id-encoding": "^1.3.0",
    "pear-dump": "^1.0.0",
    "pear-info": "^1.0.0",
    "pear-init": "^1.0.1",
    "pear-link": "^4.2.1",
    "pear-opwait": "^1.0.0",
    "pear-pipe": "^1.0.6",
    "pear-terminal": "^1.1.3",
    "streamx": "^2.23.0",
    "which-runtime": "^1.3.2"
  },
  "devDependencies": {
    "brittle": "^3.19.1",
    "prettier": "^3.7.4",
    "prettier-config-holepunch": "^2.0.0"
  }
}
