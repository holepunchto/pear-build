    "pear-opwait": "^1.0.0",
    "pear-terminal": "^1.1.3",
    "streamx": "^2.23.0",
    "which-runtime": "^1.3.2"
  },
  "devDependencies": {
    "brittle": "^3.19.1",
    "prettier": "^3.7.4",
